@{ViewData["Title"] = "New";}
@model FanFiction.Models.Сomposition

<div class="row justify-content-center">
    <div class="col-lg-9 col-xl-9">
        <form asp-action="New" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input minlength="1" maxlength="80" asp-for="Title" class="form-control" placeholder="Composition title" required>
            </div>
            <div class="form-group">
                <select asp-for="Fandom" class="form-control" required>
                    <option>Fiction</option>
                    <option>Novel</option>
                    <option>Prose</option>
                    <option>Drama</option>
                    <option>Mystery</option>
                    <option>Horror</option>
                </select>
            </div>
            <div class="form-group">
                <textarea class="form-control" asp-for="Description" rows="5" placeholder="Description"></textarea>
            </div>
            <div class="form-group" align="center">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>