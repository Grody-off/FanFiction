@{ ViewData["Title"] = "ChapterPage"; }
@model FanFiction.Models.Chapter

<div class="row justify-content-center">
    <div class="col-lg-9 col-xl-9">
        <form asp-action="ChapterPage">
            <div class="container">
                <div class="form-group">
                    <h3 class="text-left">@Model.Title</h3>
                </div>
                <div class="form-group">
                    <h5>@Html.Raw(Markdig.Markdown.ToHtml(Model.Contents))</h5>
                </div>

                <div class="form-group" align="center">
                    <a href="@Context.Request.Headers["Referer"].ToString()" id="btn-back" class="mr-2 ml-2 btn btn-primary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>