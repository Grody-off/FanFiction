@{ ViewData["Title"] = "New"; }
@model FanFiction.Models.Chapter

<div class="row justify-content-center">
    <div class="col-lg-9 col-xl-9">
        <form asp-action="NewChapter">
            <div asp-validation-summary="All" class="text-danger">
                <div class="form-group">
                    <input type="hidden" asp-for="CompositionId"  />
                </div>
                <div class="form-group">
                    <input minlength="1" maxlength="80" id="input-title" asp-for="Title" class="form-control" placeholder="Chapter title" required>
                </div>
                <div class="form-group">
                    <textarea id="textarea-contents" class="form-control" asp-for="Contents" rows="10"></textarea>
                </div>
                <div class="form-group" align="center">
                    <input type="submit" value="Save" class="ml-2 btn btn-primary">
                </div>
            </div>
        </form>
    </div>
</div>